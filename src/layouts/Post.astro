---
import Layout from "./Layout.astro";

interface Props {
  title: string;
  publishDate: Date;
  updatedDate?: Date;
}

const { title, publishDate, updatedDate } = Astro.props;

// Format dates
const formattedPublishDate = new Date(publishDate).toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});

const formattedUpdatedDate = updatedDate 
  ? new Date(updatedDate).toLocaleDateString('en-US', {
      year: 'numeric',
      month: 'long',
      day: 'numeric'
    })
  : null;
---

<Layout>
  <div class="max-w-[64rem] mx-auto px-4 sm:px-6 lg:px-8 py-4 md:py-8">
    <article>
      <header class="mb-8">
        <h1 class="block text-3xl font-bold text-ink sm:text-4xl lg:text-6xl lg:leading-tight dark:text-white">
          {title}
        </h1>
        <div class="mt-4">
          <time datetime={publishDate.toISOString()}>
            {formattedPublishDate}
          </time>
          {updatedDate && formattedUpdatedDate && (
            <span> (Updated: <time datetime={updatedDate.toISOString()}>{formattedUpdatedDate}</time>)</span>
          )}
        </div>
      </header>
      <div class="prose max-w-none prose-headings:text-4xl prose-headings:mt-12 prose-headings:mb-4 prose-p:text-lg prose-p:text-ink prose-p:mt-4 prose-a:underline hover:prose-a:text-muted dark:prose-invert">
        <slot />
      </div>
    </article>
  </div>
</Layout>